<%= form_for @product, :html => {:multipart => true} do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title,t('.title') %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description,t('.description') %><br />
    <script src="/editor/kindeditor-min.js" type="text/javascript"></script>
    <textarea id="editor_id" name="product[description]" style="width:100%;"><%=@product.description%></textarea>
    <script>
        KE.show({
                id : 'editor_id'
        });
	</script>
  </div>
  <div class="field">
    <%= f.label :image_url,t('.imageurl') %><br />
    <%= f.file_field("upload_image")%>
  </div>
  <div class="field">
    <%= f.label :price,t('.price') %><br />
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :category_id,t('.category') %><br />
    <select name="product[category_id]">
    	<%if @categories%>
    		<% @categories.each do |category| %>
				<option value="<%=category.id%>"><%=category.name%></option>
			<% end %>
    	<%end%>
    </select>
  </div>
  <div class="actions">
    <%= f.submit t('.submit')%>
  </div>
<% end %>
