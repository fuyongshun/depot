<h1>Listing stars</h1>

<table>
  <tr>
    <th>Product</th>
    <th>User</th>
    <th>Grade</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @stars.each do |star| %>
  <tr>
    <td><%= star.product_id %></td>
    <td><%= star.user_id %></td>
    <td><%= star.grade %></td>
    <td><%= link_to 'Show', star %></td>
    <td><%= link_to 'Edit', edit_star_path(star) %></td>
    <td><%= link_to 'Destroy', star, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

