<% @addresses.each do |address| %>
  <tr>
    <td><%= address.name %></td>
    <td><%= address.position %></td>
    <td><%= address.zip %></td>
    <td><%= address.phone %></td>
    <td><%= link_to t('.show'), address %></td>
    <td><%= link_to t('.edit'), edit_address_path(address) %></td>
    <td><%= link_to t('.destroy'), address, :confirm => t('.ifsure'), :method => :delete %></td>
  </tr>
<% end %>
</table>

