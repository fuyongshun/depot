<table>
	
	<%= render(cart.line_items) %>
	
	<tr class="total_line">
		<td colspan="2"><%= t('.total')%></td>
		<td class="total_cell"><%= number_to_currency(cart.total_price) %>
	</tr>
	
</table>
<%= button_to t('.checkout'), new_order_url, 
				:method => :get %>
<%= button_to t('.empty'), cart, :method => :delete, 
				:confirm => t('.ifsure') %>
